<% if notice %>
  <div class="alert alert-dark alert-dismissible fade show m-1" role="alert">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <i class="fas fa-times" style="color:white;"></i>
    </button>
  </div>
<% end %>

