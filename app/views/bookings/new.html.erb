<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new booking</h3>
        <%= simple_form_for [@space, @booking] do |f| %>
          <%= f.date_field :start_date, min: Date.tomorrow %>
          <%= f.date_field :end_date, min: Date.tomorrow %><br><br>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
