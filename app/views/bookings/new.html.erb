<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new booking</h3>
        <%= simple_form_for [@space, @booking] do |f| %>
          <%= f.input :start_date, placeholder: 'start date', as: :date, html5: true %>
          <%= f.input :end_date, placeholder: 'end date', as: :date, html5: true %>
          <%= f.submit class: 'btn btn-secondary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
