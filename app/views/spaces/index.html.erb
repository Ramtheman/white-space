<div class="container mt-5">

  <div class="row pb-5">
  <h1>Search spaces:</h1>
    <div id="SearchForm" >
      <%= form_tag(spaces_path, method: :get) do %>
        <%= text_field_tag(:search, params[:search]) %>
        <%= submit_tag ("Search") %>
      <% end %>
    </div>
  </div>

  <div class="row pb-5">
    <% @spaces.each do |space| %>
      <div class="col-12 col-md-6">

            <%= link_to space_path(space), class: "list-link" do%>
              <div class="card-product">
                <%= image_tag "#{space.type_image}", class: "image"%>
                <div class="card-product-infos">
                    <h4><%=  space.title %></h4>
                      <p>Owner: <%= space.user.first_name %> <%= space.user.last_name %></p>
                      <p>-------------------------</p>
                      <p><%= space.space_type %></p>
                      <p>£<%= space.price %></p>
                </div>
              </div>
            <% end %>
      </div>
    <% end %>
  </div>


  <h1>All Spaces</h1>
  <div class="row pb-5 mt-3">
    <% @spaces.each do |space| %>
      <div class="col-12 col-md-6">
      <%= link_to space_path(space), class: "list-link" do%>
        <div class="card-product ">
          <%= image_tag "#{space.type_image}", class: "image"%>
          <div class="card-product-infos">
            <h4><%= space.title %></h4>
            <p>Owner: <%= space.user.first_name %> <%= space.user.last_name %></p>
            <p>-------------------------</p>
            <p><%= space.space_type %></p>
            <p>£<%= space.price %>/day</p>
          </div>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>
  <h3> Where you can find our spaces </h3>
  <div class="row pb-5 mt-3">
  <div style="width: 100%; height: 600px;"
       data-controller="mapbox"
       data-mapbox-markers-value="<%= @markers.to_json %>"
       data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  </div>
