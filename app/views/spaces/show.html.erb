<h2><%= @space.title %></h2>
<h4>Ad-space in question:</h4>
<% if @space.photo.attached? %>
  <%= cl_image_tag @space.photo.key%>
<% else %>
  <%= image_tag "potato.jpg" %>
<% end %>
<br>
<br>
<p>Type of ad-space: <%= @space.space_type %></p>
<p>Price: Â£<%= @space.price %></p>
<p>Owner: <%= @space.user.first_name %> <%= @space.user.last_name %></p>

<% if @space.user == current_user %>
  <%= link_to 'Edit this space', edit_space_path(@space) %>
  <br>
<% else %>
  <%= link_to 'Book this space', new_space_booking_path(@space) %>
  <br>
<% end %>
<%= link_to 'Back to spaces list', spaces_path %>
