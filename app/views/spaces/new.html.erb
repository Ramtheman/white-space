<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new space</h3>
        <%= simple_form_for @space do |f| %>
          <%= f.input :title, placeholder: 'You title here' %>
          <% space_types = ['Car sticker', 'Tattoo', 'Bagpack', 'Legal name change', 'Front lawn'] %>
          <%= f.input :space_type, as: :select, collection: space_types, prompt:'Type of space', label: false %>
          <%= f.input :price, placeholder: 'Price of space' %>
          <%= f.input :location, placeholder: 'What postcode' %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
