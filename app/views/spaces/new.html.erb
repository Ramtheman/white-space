<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new ad-space</h3>
        <%= simple_form_for @space do |f| %>
          <%= f.input :title, placeholder: 'Ad-space title' %>
          <%= f.input :space_type, placeholder: 'Type of ad-space' %>
          <%= f.input :price, placeholder: 'Price of ad-space' %>
          <%= f.input :location, placeholder: 'Location of ad-space' %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
